<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextViewStyleIntro" parent="Widget.AppCompat.TextView" >
        <item name="android:textSize">@dimen/text_size_intro</item>
        <item name="android:textColor">@color/text_color_1</item>
    </style>

    <style name="TextViewStyleBtn">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:padding">14dp</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:background">@drawable/btn_background</item>
        <item name="layout_constraintHorizontal_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:elevation" tools:targetApi="lollipop">5dp</item>
        <item name="android:textSize">17sp</item>
    </style>

</resources>
